{
  "manifest_version": 2,
  "name": "AskAI",
  "version": "1.0",
  "description": "Get AI suggestions for highlighted text.",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
